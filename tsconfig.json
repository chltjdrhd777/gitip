{
  "compilerOptions": {
    "module": "NodeNext",
    "moduleResolution": "nodenext",
    "target": "ESNext",
    "esModuleInterop": true,
    "strict": true,
    "declaration": true,
    "skipLibCheck": true,

    "outDir": "./dist",
    "rootDir": "./src",

    "baseUrl": "./src",
    "paths": {
      "@/*": ["./*"],
      "@/constants/*": ["constants/*"],
      "@/utils/*": ["utils/*"],
      "@/service/*": ["service/*"],
      "@/types/*": ["types/*"]
    }
  },
  "include": ["./src/**/*.ts"],
  "exclude": ["node_modules"]
}
